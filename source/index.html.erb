---
pageable: true
per_page: 5
---


<% page_articles.each_with_index do |article, i| %>
                <div class="post-preview">
                    <a href="<%= article.url %>">
                        <h2 class="post-title">
                            <%= article.title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= article.data.subtitle %>
                        </h3>
                    </a>
                    <p class="post-meta">Posted by <%= data.site.author %> on <%= pretty(article.date) %></p>
                </div>
                <hr>
<% end %>


               <% if paginate && num_pages > 1 %>
               <ul class="pager">
                
                  

                     <% if prev_page %>
                        <li class="previous">
                          <a href="<%= prev_page.url %>">Previous page</a>
                        </li>
                     <% end %>
               <% end %>
               <li>Page <%= page_number %> of <%= num_pages %></li>
               <% if paginate %>
                     <% if next_page %>
                        <li class="next">
                          <a href="<%= next_page.url %>">Next page</a>
                        </li>
                      <% end %>
                      </ul>
               <% end %>
              